<project default="main" name="Activity 45" basedir="."> 

  <target name="main">
    <input message="Input name of Java file to be compiled" 
            addproperty="file-name" />
    <echo>File to be compiled: ${file-name}</echo>
    
    <javac srcdir="src" destdir="build" 
      includeantruntime="false"
    />

    <!-- This  -->
    <!-- <javac srcdir="src" destdir="build" 
      includesfile="src/${file-name}" 
      includeantruntime="false"
      classpathref="lib"
    /> -->

    <jar destfile="lib/${file-name}"
      basedir="build"
      includes="build/${file-name}.class"
    />

  </target>

</project>